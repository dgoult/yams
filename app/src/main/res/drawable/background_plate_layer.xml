        android:left="16dp"
        android:right="16dp"
        android:top="16dp"
        android:bottom="16dp">
        <bitmap
            android:src="@drawable/yams_plate"
            android:gravity="center"
            android:tileMode="disabled"
            android:scaleType="fitXY" /> <!-- fitXY pour forcer l'image à s'étirer à l'espace disponible -->
    </item>

</layer-list>